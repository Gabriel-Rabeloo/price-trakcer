generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           Int            @id @default(autoincrement())
  name         String
  url          String         @unique
  priceHistory PriceHistory[]
}

model PriceHistory {
  id        Int      @id @default(autoincrement())
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  price     Decimal
  scrapedAt DateTime @default(now())
}
